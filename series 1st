#include <iostream>
using namespace std;
int main() 
{
    cout << "Enter n \n";
    int n;
    cin>>n;
    int u=n;
    for(int i=0;i<n;i++)
    {
        for(int j=1;j<u;j++)
        {
            cout<<" ";
            u--;
            
        }
        for(int k=0;k<((2*i)+1);k++)
        {
            cout<<"*";
        }
        cout<<"\n";
    }
    return 0;
}
